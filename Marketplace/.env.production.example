# Production Environment Configuration for ServiceTextPro Frontend
# Copy this file to .env.local and update with your actual values

# API Configuration
# Option 1: Separate API subdomain
NEXT_PUBLIC_API_URL=https://api.fixitnow.net/api/v1
NEXT_PUBLIC_WS_URL=wss://api.fixitnow.net

# Option 2: Same domain with /api path (requires Nginx rewrite)
# NEXT_PUBLIC_API_URL=https://fixitnow.net/api/v1
# NEXT_PUBLIC_WS_URL=wss://fixitnow.net

# App Configuration
NEXT_PUBLIC_APP_URL=https://fixitnow.net
NEXT_PUBLIC_APP_NAME=ServiceTextPro

# Optional: Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Optional: Maps API (if using maps)
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Optional: Error Tracking
# NEXT_PUBLIC_SENTRY_DSN=

# Build Configuration
# NEXT_TELEMETRY_DISABLED=1
