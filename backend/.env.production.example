# Production Environment Configuration for ServiceTextPro Backend
# Copy this file to .env and update with your actual values

# Environment
NODE_ENV=production

# Server Configuration
PORT=3000

# Database Configuration
DB_TYPE=postgresql

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=servicetext_pro
POSTGRES_USER=servicetextpro
POSTGRES_PASSWORD=YOUR_STRONG_DATABASE_PASSWORD_HERE

# JWT Configuration
# Generate secure secrets with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=GENERATE_RANDOM_SECRET_HERE_MIN_32_CHARS
JWT_REFRESH_SECRET=GENERATE_ANOTHER_RANDOM_SECRET_HERE_MIN_32_CHARS
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# Rate Limiting (Production values)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
# Add your production domains
CORS_ORIGIN=https://fixitnow.net,https://www.fixitnow.net,https://api.fixitnow.net

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info

# Optional: Email Configuration (if using email features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@yourdomain.com

# Optional: Redis Configuration (if using caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Optional: AWS S3 Configuration (if using cloud storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=eu-central-1
# AWS_S3_BUCKET=

# Optional: Monitoring
# SENTRY_DSN=
